	};

	sysport-blk {
		compatible = "brcm,sysport-blk";
		reg-names = "sysport-base",
                            "sysport1-base";
		reg = <0x80400000 0x10000>,
                      <0x80500000 0x10000>;
		interrupt-names = "sysport-irq-0",
                                  "sysport-irq-1",
                                  "sysport-irq-2",
                                  "sysport-irq-3",
                                  "sysport-irq-4",
                                  "sysport-irq-5",
                                  "sysport1-irq-0",
                                  "sysport1-irq-1",
                                  "sysport1-irq-2",
                                  "sysport1-irq-3",
                                  "sysport1-irq-4",
                                  "sysport1-irq-5";
		interrupts = <GIC_SPI 96 IRQ_TYPE_LEVEL_HIGH>,
                             <GIC_SPI 97 IRQ_TYPE_LEVEL_HIGH>,
                             <GIC_SPI 98 IRQ_TYPE_LEVEL_HIGH>,
                             <GIC_SPI 99 IRQ_TYPE_LEVEL_HIGH>,
                             <GIC_SPI 100 IRQ_TYPE_LEVEL_HIGH>,
                             <GIC_SPI 101 IRQ_TYPE_LEVEL_HIGH>,
                             <GIC_SPI 102 IRQ_TYPE_LEVEL_HIGH>,
                             <GIC_SPI 103 IRQ_TYPE_LEVEL_HIGH>,
                             <GIC_SPI 104 IRQ_TYPE_LEVEL_HIGH>,
                             <GIC_SPI 105 IRQ_TYPE_LEVEL_HIGH>,
                             <GIC_SPI 106 IRQ_TYPE_LEVEL_HIGH>,
                             <GIC_SPI 107 IRQ_TYPE_LEVEL_HIGH>;
	};

	unimac {
		compatible = "brcm,unimac2";
		reg = <0x80400800 0x400>,
			  <0x80400c00 0x200>,
			  <0x80400000 0x40>,
			  <0x80500800 0x400>,
			  <0x80500c00 0x200>,
			  <0x80500000 0x40>;
	};

	serdes138 {
		compatible = "brcm,serdes138";
		reg = <0x804110a4 0x14>;    /* SINGLE_SERDES */
	};

	swblks {
		compatible = "brcm,swblks";
		reg-names = "xbar-ctrl",
					"sphy-ctrl";

		reg = 	<0x80411004 0x4>,
				<0x804110c0 0x4>;
		phy_base = <0x8>;
	};

	/* usb */
	usb_ctrl: usb_ctrl {
		#define USB_CTRL_ADDR       0x8000c200
		#define USB_CTRL_SIZE       0x100
		#include "../ip/bcm_usb_ctrl.dtsi"
	};

	usb0_xhci: usb0_xhci {
		#define USB_ADDR            0x8000d000
		#define USB_SIZE            0x1000
		#define USB_IRQ             74 
		#include "../ip/bcm_usb_xhci.dtsi"

		xhci_port: port@1{
			reg = <1>;
			#trigger-source-cells = <0>;
		};
	};

	usb0_ehci: usb0_ehci {
		#define USB_ADDR            0x8000c300
		#define USB_SIZE            0x100
		#define USB_IRQ             73
		#include "../ip/bcm_usb_ehci.dtsi"

 		ehci0_port: port@1{
			reg = <1>;
			#trigger-source-cells = <0>;
		};
	};

	usb1_ehci: usb1_ehci {
		#define USB_ADDR            0x8000c500
		#define USB_SIZE            0x100
		#define USB_IRQ             73
		#include "../ip/bcm_usb_ehci.dtsi"

		ehci1_port: port@1{
